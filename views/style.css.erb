<% PREFIX = ['', '-moz-', '-webkit-'] %>
html, body {
  height: 100%;
}

body {
  background: url(/aquarium.jpg) no-repeat center center fixed; /* linear-gradient(#0099ff, #003399); */
  <% PREFIX.each do |prefix| %>
  <%= prefix %>background-size: cover;
  <% end %>
  margin: 0;
  padding: 0;
  overflow: hidden;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}

body.no-background {
  background: rgba(0, 0, 0, 0);
}

#wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  margin: 0 auto;
  z-index: 100;
}

#legends {
  position: absolute;
  top: 0;
  right: 0;
  margin: 10px;
  overflow: hidden;
  z-index: 100;
}

#legends .item {
  text-align: center;
  padding: 5px 10px;
  color: white;
  text-transform: uppercase;
  margin-bottom: 7px;
  margin-right: 5px;
  border-radius: 5px;
  box-shadow: 3px 3px 2px 0px rgba(50, 50, 50, 0.75);
  font-size: 10px;
}

#frame-container {
  width: 100%;
  height: 100%;
  position: relative;
}

#frame-container iframe {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  border: 0;
  height: 100%;
  width: 100%;
}

.bubble-container {
  position: absolute;
  opacity: 1;
  transition: transform 15s linear;

  /* Should be overridden by Javascript if other size is needed */
  top: -48px;
  height: 24px;
  width: 24px;
}

.bubblerise {
  transform: translateY(1200px);
}

.bubble {
  width: 100%;
  height: 100%;
  margin: 0 auto;
  border-style: solid;
  border-color: rgba(255, 255, 255, 0.3);
  border-width: 4px;
  border-radius: 1000px;
  background: rgba(255, 255, 255, 0.2);
  <% PREFIX.each do |prefix| %>
  <%= prefix %>animation: bubblewobble 2s infinite linear;
  <% end %>
}

<% PREFIX.each do |prefix| %>
@<%= prefix %>keyframes bubblewobble {
  0% {
    margin-left: 0;
    height: 100%;
    width: 100%;
  }

  25% {
    height: 108%;
    width: 108%;
  }

  50% {
    margin-left: 10px;
  }

  75% {
    height: 92%;
    width: 92%;
  }

  100% {
    margin-left: 0;
    height: 100%;
    width: 100%;
  }
}
<% end %>
