<% PREFIX = ['', '-moz-', '-webkit-'] %>
html, body {
  height: 100%;
}

body {
  background: linear-gradient(#0099ff, #003399);
}

.wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  margin: 0 auto;
}

.bubble-container {
  position: absolute;
  opacity: 1;
  transition: transform 15s linear;

  /* Should be overridden by Javascript if other size is needed */
  top: -48px;
  height: 24px;
  width: 24px;
}

.bubblerise {
  transform: translateY(1500px);
}

.bubble {
  width: 100%;
  height: 100%;
  margin: 0 auto;
  border-style: solid;
  border-color: rgba(255, 255, 255, 0.3);
  border-width: 4px;
  border-radius: 1000px;
  background: rgba(255, 255, 255, 0.2);
  <% PREFIX.each do |prefix| %>
  <%= prefix %>animation: bubblewobble 2s infinite linear;
  <% end %>
}

<% PREFIX.each do |prefix| %>
@<%= prefix %>keyframes bubblewobble {
  0% {
    margin-left: 0;
    height: 100%;
    width: 100%;
  }

  25% {
    height: 108%;
    width: 108%;
  }

  50% {
    margin-left: 10px;
  }

  75% {
    height: 92%;
    width: 92%;
  }

  100% {
    margin-left: 0;
    height: 100%;
    width: 100%;
  }
}
<% end %>
