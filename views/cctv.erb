<% if ENV['CCTV_STREAM'] %>
  var cctv_stream = new EventSource('<%= ENV['CCTV_STREAM'] %>')

  cctv_stream.onmessage = function(event) {
    json = JSON.parse(event.data);

    points = json['points'];

    if (typeof points !== 'undefined' && points[points.length-1]['y'] === -1) {
      new Bubble().init('error', '#f00505');
    }
  }
<% end %>
