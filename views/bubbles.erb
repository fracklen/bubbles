  <script>
    // var stream = new EventSource('https://8c06a69abf54b94af2099d298bd0fc04@stream.flowdock.com/flows?filter=testingincr/udvikling')
    var stream = new EventSource('/stream')

    stream.onmessage = function(event) {
      var json = JSON.parse(event.data);

      var id   = json.id   || parseInt(Math.random() * 100000);
      var type = json.type || 'none';

      new Bubble().init(id, type);
    }
  </script>
